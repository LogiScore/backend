# LogiScore Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/logiscore
# For local development with SQLite:
# DATABASE_URL=sqlite:///./test.db

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (configure these in your Stripe dashboard)
# Updated to match your actual Stripe products
STRIPE_SHIPPER_MONTHLY_PRICE_ID=price_your_shipper_monthly_price_id_here
STRIPE_SHIPPER_ANNUAL_PRICE_ID=price_your_shipper_annual_price_id_here
STRIPE_FORWARDER_MONTHLY_PRICE_ID=price_your_forwarder_monthly_price_id_here
STRIPE_FORWARDER_ANNUAL_PRICE_ID=price_your_forwarder_annual_price_id_here
STRIPE_FORWARDER_ANNUAL_PLUS_PRICE_ID=price_your_forwarder_annual_plus_price_id_here

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAIL_FROM=noreply@logiscore.com
MAIL_FROM_NAME=LogiScore

# JWT Configuration
SECRET_KEY=your_jwt_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://logiscore.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_STRIPE_WEBHOOKS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SUBSCRIPTION_MANAGEMENT=True
